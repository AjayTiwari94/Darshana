{
  "name": "darshana-platform",
  "version": "1.0.0",
  "description": "Digital Cultural & Historical Storytelling Platform - Explore India's rich heritage through AI-powered storytelling, AR/VR experiences, and interactive cultural journeys",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\" \"npm run dev:ai\"",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd backend && npm run dev",
    "dev:ai": "cd ai-service && python app.py",
    "build": "concurrently \"npm run build:frontend\" \"npm run build:backend\"",
    "build:frontend": "cd frontend && npm run build",
    "build:backend": "cd backend && npm run build",
    "start": "concurrently \"npm run start:frontend\" \"npm run start:backend\" \"npm run start:ai\"",
    "start:frontend": "cd frontend && npm start",
    "start:backend": "cd backend && npm start",
    "start:ai": "cd ai-service && python app.py",
    "install-all": "npm install && cd frontend && npm install && cd ../backend && npm install && cd ../ai-service && pip install -r requirements.txt",
    "test": "concurrently \"npm run test:frontend\" \"npm run test:backend\"",
    "test:frontend": "cd frontend && npm test",
    "test:backend": "cd backend && npm test",
    "lint": "concurrently \"npm run lint:frontend\" \"npm run lint:backend\"",
    "lint:frontend": "cd frontend && npm run lint",
    "lint:backend": "cd backend && npm run lint"
  },
  "keywords": [
    "cultural-heritage",
    "storytelling",
    "AI",
    "AR/VR",
    "tourism",
    "education",
    "indian-culture",
    "mythology",
    "history",
    "voice-assistant"
  ],
  "author": "Darshana Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/AjayTiwari94/Darshana.git"
  },
  "bugs": {
    "url": "https://github.com/AjayTiwari94/Darshana/issues"
  },
  "homepage": "https://github.com/AjayTiwari94/Darshana#readme",
  "engines": {
    "node": "22.x"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@heroicons/react": "^2.2.0",
    "html2pdf.js": "^0.12.0",
    "lucide-react": "^0.546.0",
    "next": "^14.0.0",
    "pdfkit": "^0.17.2",
    "qrcode-terminal": "^0.12.0",
    "whatsapp-web.js": "^1.34.1"
  }
}
